<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.UpdateProfileActivity"
    android:padding="10dp">
    <ScrollView
        android:layout_marginBottom="10dp"
        android:layout_above="@id/btn_update_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="Họ và tên"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:maxLength="50"
                android:id="@+id/edt_update_profile_full_name"
                android:padding="5dp"
                android:background="@drawable/bg_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giới tính"/>
            <RadioGroup
                android:id="@+id/rg_gender"
                android:padding="5dp"
                android:background="@drawable/bg_input"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/rb_male"
                    android:checked="true"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    android:text="Nam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <RadioButton
                    android:id="@+id/rb_female"
                    android:layout_marginLeft="10dp"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    android:text="Nữ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RadioGroup>
            <TextView
                android:layout_marginTop="5dp"
                android:text="Số điện thoại"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:maxLength="12"
                android:id="@+id/edt_update_profile_phone_number"
                android:inputType="number"
                android:padding="5dp"
                android:background="@drawable/bg_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="5dp"
                android:text="Địa chỉ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:maxLength="100"
                android:id="@+id/edt_update_profile_address"
                android:padding="5dp"
                android:background="@drawable/bg_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
            android:layout_marginTop="5dp"
            android:text="Ngày sinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
            <EditText
                android:focusable="false"
                android:focusableInTouchMode="true"
                android:id="@+id/edt_update_profile_birthday"
                android:padding="5dp"
                android:background="@drawable/bg_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="5dp"
                android:text="Số CMND"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:maxLength="12"
                android:id="@+id/edt_update_profile_cmnd"
                android:inputType="number"
                android:padding="5dp"
                android:background="@drawable/bg_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="5dp"
                android:text="Năm nhập học"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:maxLength="4"
                android:id="@+id/edt_update_profile_nam_hoc"
                android:inputType="number"
                android:padding="5dp"
                android:background="@drawable/bg_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="5dp"
                android:text="Khóa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edt_update_profile_khoa"
                android:text=""
                android:inputType="number"
                android:padding="5dp"
                android:background="@drawable/bg_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="5dp"
                android:text="Mã số sinh viên"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edt_update_profile_mssv"
                android:text=""
                android:padding="5dp"
                android:background="@drawable/bg_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>
    </ScrollView>
    <Button
        android:onClick="clickToUpdateProfile"
        android:id="@+id/btn_update_profile"
        android:fontFamily="@font/be_vietnam_bold"
        android:textColor="#ffffff"
        android:text="Cập nhật"
        android:background="@drawable/bg_button"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</RelativeLayout>