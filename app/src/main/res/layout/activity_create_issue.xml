<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CreateIssueActivity"
    android:padding="10dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:padding="5dp"
            android:background="@drawable/bg_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_arrow_right"
                android:textColor="@color/colorPrimary"
                android:text="Lịch sử yêu cầu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv_arrow_right"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_arrow_right_128dp"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phòng đang ở:"/>
        <TextView
            android:padding="5dp"
            android:background="@drawable/bg_input"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A13 (phòng tiêu chuẩn)"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hủy hợp đồng từ ngày:"/>
        <LinearLayout
            android:background="@drawable/bg_input"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Spinner
                android:id="@+id/spn_issue_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Spinner>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_equipment_type"
            android:text="Loại trang thiết bị:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <LinearLayout
            android:id="@+id/ll_equipment_type"
            android:background="@drawable/bg_input"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Spinner
                android:id="@+id/spn_equipment_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Spinner>
        </LinearLayout>

        <TextView
            android:text="Nội dung:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:maxLength="500"
            android:padding="5dp"
            android:background="@drawable/bg_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Hình ảnh (nếu có):"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:padding="5dp"
            android:background="@drawable/bg_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:src="@drawable/addimage"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
            <ImageView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
        </LinearLayout>



    </LinearLayout>
    <Button
        android:fontFamily="@font/be_vietnam_bold"
        android:textColor="#ffffff"
        android:text="Gửi yêu cầu"
        android:background="@drawable/bg_button"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>