<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".Activity.RenewContractActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:padding="5dp"
            android:background="@drawable/bg_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_arrow_right"
                android:textColor="@color/colorPrimary"
                android:text="Lịch sử yêu cầu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv_arrow_right"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_arrow_right_128dp"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phòng đang ở:"/>
        <TextView
            android:padding="5dp"
            android:background="@drawable/bg_input"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A13 (phòng tiêu chuẩn)"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số tháng muốn gia hạn:"/>
        <RadioGroup
            android:padding="5dp"
            android:background="@drawable/bg_input"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:text="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_marginLeft="20dp"
                android:text="8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_marginLeft="20dp"
                android:text="12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RadioGroup>




    </LinearLayout>
    <Button
        android:fontFamily="@font/be_vietnam_bold"
        android:textColor="#ffffff"
        android:text="Gửi yêu cầu"
        android:background="@drawable/bg_button"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>