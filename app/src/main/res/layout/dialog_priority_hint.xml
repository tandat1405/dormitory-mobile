<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@drawable/bg_input">
    <TextView
        android:textColor="@color/black"
        android:fontFamily="@font/be_vietnam_bold"
        android:padding="5dp"
        android:gravity="center"
        android:text="Đối tượng ưu tiên"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:background="@color/gray_btn_bg_color"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
        <LinearLayout
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:text="Đối tượng loại 1:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="1. Người có công với cách mạng và thân nhân của người có công với cách mạng."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="2. Sinh viên có cha mẹ thường trú tại các xã biên giới, vùng cao, hải đảo và các xã có điều kiện kinh tế - xã hội đặc biệt khó khăn."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="3. Sinh viên mồ côi cả cha lẫn mẹ không nơi nương tựa hoặc bị tàn tật, khuyết tật có khó khăn về kinh tế."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="4. Sinh viên là người dân tộc thiểu số thuộc hộ nghèo."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:text="Đối tượng loại 2:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="1. Sinh viên đạt điểm cao trong kỳ thi tuyển sinh đầu vào, có thành tích học tập tốt trong 3 năm học cấp III."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="10dp"
                android:text="***Lưu ý:\n Với mỗi loại ưu tiên, bạn cần gửi hình ảnh xác mình lên hệ thống. Ví dụ: bản sao học bạ cấp 3 hoặc giấy bảo điểm thi đại học cho đối tượng loại 2."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <Button
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:id="@+id/btn_priority_OK"
            android:textColor="@color/white"
            android:text="OK"
            android:background="@drawable/bg_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</LinearLayout>