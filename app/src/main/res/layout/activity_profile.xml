<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ProfileActivity"
    android:orientation="vertical"
    android:weightSum="10">
    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:weightSum="10"
        android:gravity="center"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <de.hdodenhof.circleimageview.CircleImageView
            app:civ_border_width="2dp"
            app:civ_border_color="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:src="@drawable/student"/>
        <TextView
            android:id="@+id/tv_profile_name"
            android:fontFamily="@font/be_vietnam_regular"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_profile_email"
            android:fontFamily="@font/be_vietnam_regular"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_profile_training_point"
            android:fontFamily="@font/be_vietnam_regular"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="7"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="10dp"
        >
        <ScrollView
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                android:padding="5dp"
                android:background="@drawable/bg_input"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerVertical="true"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thông tin cơ bản"/>
                    <ImageView
                        android:visibility="gone"
                        android:onClick="clickToUpdateProfile"
                        android:layout_centerVertical="true"
                        android:src="@drawable/edit"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <View
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@android:color/darker_gray"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Giới tính"/>
                            <TextView
                                android:id="@+id/tv_profile_gender"
                                android:text="Đang tải"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Số điện thoại"/>

                            <TextView
                                android:id="@+id/tv_profile_phone_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="0dp"
                                android:text="Đang tải" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Địa chỉ"/>
                            <TextView
                                android:id="@+id/tv_profile_address"
                                android:text="Đang tải"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ngày sinh"/>
                            <TextView
                                android:id="@+id/tv_profile_birthday"
                                android:text="Đang tải"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CMND"/>
                            <TextView
                                android:id="@+id/tv_profile_cmnd"
                                android:text="Đang tải"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Năm nhập học"/>
                            <TextView
                                android:id="@+id/tv_profile_year_start"
                                android:text="Đang tải"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Khóa"/>
                            <TextView
                                android:id="@+id/tv_profile_term"
                                android:text="Đang tải"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Đối tượng ưu tiên"/>
                            <TextView
                                android:id="@+id/tv_profile_priority"
                                android:text="Đang tải"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"/>
                        </RelativeLayout>

                    </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:weightSum="9"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="120dp">
                    <LinearLayout
                        android:onClick="clickToViewRoomDetail"
                        android:background="@drawable/bg_menu_item"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical"
                        android:weightSum="10"
                        android:gravity="center"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/myroom"
                            android:layout_weight="4"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"/>
                        <TextView
                            android:textSize="16sp"
                            android:fontFamily="@font/be_vietnam_bold"
                            android:textColor="@color/black"
                            android:text="Phòng của tôi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:background="@drawable/bg_menu_item"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical"
                        android:weightSum="10"
                        android:gravity="center"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/contract"
                            android:layout_weight="4"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"/>
                        <TextView
                            android:textSize="16sp"
                            android:fontFamily="@font/be_vietnam_bold"
                            android:textColor="@color/black"
                            android:text="Hợp đồng"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:onClick="clickToSignOut"
                        android:background="@drawable/bg_menu_item"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical"
                        android:weightSum="10"
                        android:gravity="center"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/logout"
                            android:layout_weight="4"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"/>
                        <TextView
                            android:textSize="16sp"
                            android:fontFamily="@font/be_vietnam_bold"
                            android:textColor="@color/black"
                            android:text="Đăng xuất"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </ScrollView>

        <Button
            android:visibility="gone"

            android:text="LOG OUT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>